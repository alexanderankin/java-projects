[*]
charset = utf-8
end_of_line = lf
indent_size = 4
tab_width = 4
ij_continuation_indent_size = 8
indent_style = space
insert_final_newline = true
max_line_length = 120

# for flexibility
ij_formatter_tags_enabled = true
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on

# https://blog.jetbrains.com/idea/2019/06/managing-code-style-on-a-directory-level-with-editorconfig/
ij_any_line_comment_at_first_column = false
ij_any_line_comment_add_space = true
ij_any_line_comment_add_space_on_reformat = true
ij_any_block_comment_at_first_column = false
ij_any_block_comment_add_space = true
ij_any_keep_line_breaks = true

ij_html_space_inside_empty_tag = true
ij_html_continuation_indent_size = 2

# for java mainly
ij_any_align_multiline_binary_operation = false

[*.{js,mjs,jsx,ts,tsx,yaml,json,toml}]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 4

[*.{js,mjs,jsx,ts,tsx}]
ij_javascript_continuation_indent_size = 2
ij_javascript_spaces_within_object_literal_braces = true
ij_javascript_spaces_within_imports = true

ij_typescript_continuation_indent_size = 2
ij_typescript_spaces_within_object_literal_braces = true
ij_typescript_spaces_within_imports = true
